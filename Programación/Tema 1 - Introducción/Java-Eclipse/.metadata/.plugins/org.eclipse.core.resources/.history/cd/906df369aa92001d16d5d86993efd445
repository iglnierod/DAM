
public class Punto {
	private int x;
	private int y;
	//Constructor
	public Punto(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	//Getters & Setters
	public void setX(int x){
		this.x = x;
	}
	
	public int getX() {
		return x;
	}
	
	public void setY(int y) {
		this.y = y;
	}
	
	public int getY() {
		return y;
	}
	
	//MÃ©todos
	public void mostrarCoordenadas() {
		System.out.print("(" + getX() + "," + getY() + ")\n");
	}
	
	public String obtenerDistanciaEntrePuntos() {
		return "(" + getX() + "," + getY() + ")";
	}
	
	public void cambiarCoordenadas(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	//Main
	public static void main(String args[]) {
//		Punto punto = new Punto(3,2);
	}
}
